@model Inmobiliaria_Avgustin.Models.Inquilino

@{
    ViewData["Title"] = "Crear Inquilino";
}

<h2>Crear Inquilino</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellido" class="control-label">Apellido</label>
        <input asp-for="Apellido" class="form-control" required />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dni" class="control-label">DNI</label>
        <input asp-for="Dni" class="form-control" required />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono" class="control-label">Tel√©fono</label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Trabajo" class="control-label">Trabajo</label>
        <input asp-for="Trabajo" class="form-control" />
        <span asp-validation-for="Trabajo" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="Ingresos" class="control-label">EmaIngresos</label>
        <input asp-for="Ingresos" class="form-control" />
        <span asp-validation-for="Ingresos" class="text-danger"></span>
    </div>


    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
