@model IEnumerable<Inmobiliaria_Avgustin.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-4">
    <h2>Usuarios</h2>

    <!-- BotÃ³n para crear un nuevo usuario -->
    <a asp-controller="Usuario" asp-action="Create" class="btn btn-success mb-3">
        <i class="fas fa-user-plus"></i> Nuevo Usuario
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Rol</th>
                <th>Creado En</th>
                <th>Actualizado En</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>@u.Email</td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Rol</td>
                    <td>@u.Creado_En.ToString("yyyy-MM-dd")</td>
                    <td>@u.Actualizado_En.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Usuario", new { id = u.Id })"
                            class="btn btn-warning btn-sm )">Editar</a>
                        <a href="@Url.Action("Delete", "Usuario", new { id = u.Id })"
                            class="btn btn-danger btn-sm">Eliminar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
